      = link_to categories_path, class: "nav-link d-flex align-items-center #{active_when(current_controller?("categories"))}" do
        = external_svg_tag("svgs/table.svg")
        = t(".categories")
    = link_to products_path, class: "nav-link d-flex align-items-center #{active_when(current_controller?("products"))}" do
      = external_svg_tag("svgs/cube.svg")
      = t(".products")

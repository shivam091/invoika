.position-relative.d-flex.align-items-center.flex-column-reverse.flex-lg-row.flex-wrap.flex-lg-nowrap.my-2
  .list-style-none.d-flex.flex-wrap.col-0.col-lg-6.justify-content-start.justify-content-lg-between
    .d-flex.align-items-center.gap-2
      = link_to root_path do
        = external_svg_tag("logo.svg", height: "24px", width: "24px", fill: "#0969da")
      %span.fw-bold
        = t(".copyright_notice", copyright_years: get_copyright_year).html_safe
  %nav.col-12.col-lg-6{aria: {label: t(".footer")}}
    %h3#footer-heading.visually-hidden= t(".footer_navigation")
    %ul.list-unstyled.d-flex.align-items-center.flex-wrap.col-12.justify-content-center.justify-content-lg-end.mb-2.mb-lg-0{"aria-labelledby" => "footer-heading"}
      %li.d-inline-block.middle-dot-divider
        = link_to t(".terms"), "javascript:void(0)", target: :_blank
      %li.d-inline-block.middle-dot-divider
        = link_to t(".privacy"), "javascript:void(0)", target: :_blank
      %li.d-inline-block.middle-dot-divider
        = link_to t(".contact"), "javascript:void(0)", target: :_blank
      %li.d-inline-block.middle-dot-divider
        = link_to t(".support"), "javascript:void(0)", target: :_blank
      %li.d-inline-block.middle-dot-divider
        = link_to t(".about"), "javascript:void(0)", target: :_blank

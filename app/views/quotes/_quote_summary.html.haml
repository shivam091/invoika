.col-xxl-3.col-lg-5.col-md-6.ms-md-auto.mt-2.mb-2
  %table.table.table-borderless.box-shadow-none
    %tbody
      %tr
        %td.fw-bold.ps-0= t(".subtotal")
        %td.text-muted.text-end.pe-0= number_to_currency(@quote.sub_total, unit: @quote.currency.symbol)
      %tr
        %td.fw-bold.ps-0= t(".discount")
        %td.text-muted.text-end.pe-0= number_to_currency(@quote.discount_amount, unit: @quote.currency.symbol)
      %tr
        %td.fw-bold.ps-0= t(".total")
        %td.text-muted.text-end.pe-0= number_to_currency(@quote.total_amount, unit: @quote.currency.symbol)

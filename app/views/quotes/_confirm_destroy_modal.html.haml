.text-center
  .alert.alert-danger.d-flex.align-items-center
    = external_svg_tag("svgs/exclamation-triangle.svg", height: 24, width: 24, class: "me-2")
    = t(".unexpected_bad_things_will_happen")
%ul.mb-2.list-unstyled
  %li.custom= t(".delete_quote_confirmation_text", quote_code: "<strong>#{@quote.code}</strong>").html_safe
  %li.custom= t(".this_cannot_be_undone")
%p.mb-2
  = t(".type_quote_code_to_confirm", quote_code: "<strong>#{@quote.code}</strong>").html_safe
= turbo_frame_tag :quote_destroy_form do
  = render_if_exists("quotes/confirm_destroy_form")

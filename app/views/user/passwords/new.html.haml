= title(t(".title"))
.text-center
  = link_to "", root_path, class: "invoika-logo"
  %h4.fw-bold.fw-normal= t(".password_assistance")
  %p=t (".password_reset_note")
= bootstrap_form_with model: resource, as: resource_name, url: password_path(resource_name), data: {turbo: false} do |form|
  = form.text_field :email, autocomplete: "new-email", data: {controller: "autofocus"},
    value: (params[:email] || resource.email), floating: true
  = form.errors_on :email
  = button_tag type: :submit, class: "w-100 justify-content-center btn btn-primary mt-2" do
    = button_text("continue")

.card.card-primary.border.border-primary
  .card-header
    .d-flex.justify-content-between.align-items-center
      %ul.nav.nav-pills.flex-column.flex-lg-row.nav-justified
        - if policy(::Product).index?
          %li.nav-item
            = link_to t(".all"), products_path, class: "flex-sm-fill text-sm-center nav-link #{active_when(current_action?("index"))}"
        - if policy(::Product).active?
          %li.nav-item
            = link_to t(".active"), active_products_path, class: "flex-sm-fill text-sm-center nav-link #{active_when(current_action?("active"))}"
        - if policy(::Product).inactive?
          %li.nav-item
            = link_to t(".inactive"), inactive_products_path, class: "flex-sm-fill text-sm-center nav-link #{active_when(current_action?("inactive"))}"
      - if policy(::Product).create?
        = link_to new_product_path, class: "btn btn-primary" do
          = external_svg_tag("svgs/plus.svg")
          %span.d-block.d-lg-none= button_text("new")
          %span.d-none.d-lg-block= button_text("new_product")
  .card-body{data: {controller: "select-all-checkbox"}}
    = render_if_exists("products/product")
  - if @pagy.pages > 1
    .card-footer
      = render_if_exists("shared/pagination", locals: {pagy: @pagy})

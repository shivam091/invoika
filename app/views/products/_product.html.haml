= label_tag :selections, "", class: "form-label", data: {select_all_checkbox_target: "count"}
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th{width: "25px", scope: "col"}#
        - if @products&.count > 0
          %th{width: "25px", scope: "col"}
            = check_box_tag "checkbox", nil, false, class: "form-check-input", data: {select_all_checkbox_target: "selectAllCheckbox"}
        %th{scope: "col"}= t(".name")
        %th{scope: "col"}= t(".category")
        %th{scope: "col"}= t(".unit_price")
        %th{scope: "col"}= t(".sell_price")
        %th{width: "25px", scope: "col"}= t(".actions")
    %tbody
      - if @products&.each.with_index(1) do |product, index|
        %tr
          %td.fw-bold
            = (@pagy.offset + index)
          %td
            = check_box_tag "product_ids[]", product.id, false, class: "form-check-input", data: {select_all_checkbox_target: "checkbox"}
          %td
            .d-flex.align-items-center
              .image.image-circle.image-mini.border.me-2
                = image_tag product.image_url
              .d-flex.flex-column
                .d-block
                  = conditional_link_to policy(product).show?, product_path(product), class: "fw-bold" do
                    = product.name
                = product.code
          %td= product.category_name
          %td= number_to_currency(product.unit_price, unit: @company.currency.symbol)
          %td= number_to_currency(product.sell_price, unit: @company.currency.symbol)
          %td.actions
            = link_to "javascript:void(0)", class: "text-default", data: {bs_toggle: "dropdown"}, aria: {expanded: false} do
              = external_svg_tag("svgs/ellipsis-vertical.svg")
            %ul.dropdown-menu
              - if policy(product).update?
                %li
                  = link_to edit_product_path(product), class: "dropdown-item" do
                    = external_svg_tag("svgs/pencil.svg")
                    = button_text("edit")
              - if product.is_active? && policy(product).deactivate?
                %li
                  = link_to confirm_deactivate_product_path(product), class: "dropdown-item", data: {turbo_frame: :remote_modal} do
                    = external_svg_tag("svgs/archive.svg")
                    = button_text("deactivate")
              - if !product.is_active? && policy(product).activate?
                %li
                  = link_to confirm_activate_product_path(product), class: "dropdown-item", data: {turbo_frame: :remote_modal} do
                    = external_svg_tag("svgs/unarchive.svg")
                    = button_text("activate")
              - if policy(product).destroy?
                %li
                  = link_to confirm_destroy_product_path(product), class: "dropdown-item dropdown-item-danger", data: {turbo_frame: :remote_modal} do
                    = external_svg_tag("svgs/trash.svg")
                    = button_text("delete")
      - end.empty?
        %tr
          %td.no-data{colspan: ::Product.columns.count}
            - if current_action?("active")
              = t(".no_active_products_to_display")
            - elsif current_action?("inactive")
              = t(".no_inactive_products_to_display")
            - else
              = t(".no_products_to_display")
